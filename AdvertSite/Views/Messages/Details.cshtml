@model AdvertSite.Models.Messages

@{
    ViewData["Title"] = "Informacija apie žinutę";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gautas @Html.DisplayNameFor(model => model)</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Subject)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Text)
        </dd>
        @if (Context.Request.Query["option"] == "Inbox")
        {
            <dt>
                @*@Html.DisplayNameFor(model => model.UsersHasMessages.FirstOrDefault().Sender.UserName)*@
                Siuntėjas
            </dt>
            <dd>
                @Html.DisplayFor(model => model.UsersHasMessages.FirstOrDefault().Sender.UserName)
            </dd>
        }
        else if (Context.Request.Query["option"] == "Outbox")
        {
            <dt>
                @*@Html.DisplayNameFor(model => model.UsersHasMessages.FirstOrDefault().Sender.UserName)*@      
                Gavėjas
            </dt>
            <dd>
                @Html.DisplayFor(model => model.UsersHasMessages.FirstOrDefault().Recipient.UserName)
            </dd>
        }
    </dl>
</div>
